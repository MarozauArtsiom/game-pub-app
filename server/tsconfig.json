{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": "./",
    "resolveJsonModule": true
    },
  "exclude": ["node_modules", "dist"]
}
